<robo:Layout
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:robo="http://robojs.org/schema">

    <robo:TextInput
        type="text"
        value="{Binding messageInput}" />

    <robo:Button
        command="saveMessage"
        enabled="{Binding canSave}">
        Save
    </robo:Button>

    <robo:Label text="{Binding messageLength}" />

    <p>
        <robo:Label text="{Binding messageFeedback}" />
    </p>

    <div><img src="{Binding imageUrl}" /></div>

</robo:Layout>
